<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/new_instruction_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/delete_new_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/delete_new_instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/new_instruction_narration_uri_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/new_instruction_narration_upload_button"
        app:layout_constraintBottom_toBottomOf="@id/new_instruction_narration_upload_button"/>

    <Button
        android:id="@+id/new_instruction_narration_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/delete_new_instruction"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow1"
        app:layout_constraintTop_toBottomOf="@+id/new_instruction_narration_upload_button"/>

    <TextView
        android:id="@+id/new_instruction_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/new_instruction_title_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_instruction_narration_upload_button"/>

    <EditText
        android:id="@+id/new_instruction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:autofillHints="false"
        android:background="@android:drawable/title_bar"
        android:backgroundTint="#151515"
        android:hint="@string/new_instruction_title"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/green1"
        app:layout_constraintTop_toBottomOf="@+id/new_instruction_title_label"/>

    <TextView
        android:id="@+id/new_instruction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_instruction_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_instruction_title"/>

    <EditText
        android:id="@+id/new_instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:autofillHints="false"
        android:background="@android:drawable/title_bar"
        android:backgroundTint="#151515"
        android:hint="@string/new_instruction_text"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/green1"
        app:layout_constraintTop_toBottomOf="@id/new_instruction_label"/>

    <TextView
        android:id="@+id/new_instruction_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_instruction_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_instruction_text"/>

    <EditText
        android:id="@+id/new_instruction_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:autofillHints="false"
        android:background="@android:drawable/title_bar"
        android:backgroundTint="#151515"
        android:hint="@string/new_instruction_time_input"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/green1"
        app:layout_constraintTop_toBottomOf="@id/new_instruction_time_label"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow1"
        app:layout_constraintTop_toBottomOf="@+id/new_instruction_time_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>
