<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial.version.TutorialLoading">

    <TextView
        android:id="@+id/tutorial_loading_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_loading_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/tutorial_loading_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tutorial_loading_info"/>

    <View
        android:id="@+id/tutorial_loading_progress_1"
        android:layout_width="18dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tutorial_loading_info"
        app:layout_constraintEnd_toStartOf="@+id/tutorial_loading_progress_2"/>

    <View
        android:id="@+id/tutorial_loading_progress_2"
        android:layout_width="18dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tutorial_loading_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/tutorial_loading_progress_3"
        android:layout_width="18dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tutorial_loading_info"
        app:layout_constraintStart_toEndOf="@id/tutorial_loading_progress_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
